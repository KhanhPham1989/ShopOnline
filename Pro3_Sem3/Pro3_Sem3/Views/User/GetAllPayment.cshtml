@model IEnumerable<Pro3_Sem3.Models.Payment>

@{
    ViewData["Title"] = "GetAllPayment";
    Layout = "~/Views/Shared/_CatererLayout.cshtml";
}

<h1>Hi,@ViewBag.name. This is your history payment</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                <p>Payment Code</p>
            </th>
            <th>
                <p>Order Date</p>
            </th>
            <th>
                <p>Order status</p>
            </th>
            <th>
                <p>Total Price</p>
            </th>
            <th>
                <p>Delivery Date</p>
            </th>
            <th>
                <p>Restaurant Shipping</p>
            </th>
            <th>
                <p>Worker Service</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <input hidden asp-for="@item.Paymentid" name="paid" value="@item.Paymentid" />
                @Html.DisplayFor(modelItem => item.Paymentid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @if (item.Status == true)
                {
                    <div style="background-color : springgreen; border:solid dashed groove">
                        <p>Already Payment</p>
                    </div>
                }
                else
                {
                    <div style="background-color : red; border:solid dashed groove">
                        @Html.DisplayFor(modelItem => item.Status) Not yet
                    </div>
                }

<td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cater.Caterfullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cater.Caterphone)
            </td>
            <td>
                <a asp-action="GetPaymentDetails" asp-controller="User" asp-route-id="@item.Paymentid">See Details</a> |
                <a asp-action="Details" asp-route-id="@item.Paymentid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Paymentid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
